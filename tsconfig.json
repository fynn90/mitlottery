{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "ts-build",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "paths":{
      "$": ["src"]
    },
    "lib": [
      "es6",
      "es7",
      "dom",
      "webworker"
    ],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}